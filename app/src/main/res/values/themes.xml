    <style name="Theme.RBV" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ijblue</item>
        <item name="colorPrimaryVariant">@color/ijblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/ijblue</item>
        <!-- Default background color. -->
        <item name = "android:windowBackground">@color/background</item>
