<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dia_view" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/background_default</item>
        <item name="android:windowTitleStyle">@style/dia_view_title</item>
    </style>

    <style name="dia_view_title" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dia_view_title_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/highlight</item>
    </style>

    <style name="material_edit_text" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/highlight</item>
    </style>

    <style name="material_button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="media_button" parent="material_button">
        <item name="android:background">@drawable/media_button</item>
        <item name="backgroundTint">@null</item>
    </style>
</resources>
