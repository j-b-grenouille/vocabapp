<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/dia_export_include_settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/dia_export_include_settings"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:buttonTint="@color/ijblue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/import_export_include_settings"
            android:textColor="@color/light_black"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/dia_export_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dia_export_include_settings_layout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:text="@string/start"
        android:textColor="@color/light_black"
        android:textSize="20sp" />
</RelativeLayout>
