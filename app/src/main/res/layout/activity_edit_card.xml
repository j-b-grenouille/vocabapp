<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_edit_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:labelFor="@id/edit_card_front"
                android:text="@string/card_front"
                android:textColor="@color/light_black" />

            <EditText
                android:id="@+id/edit_card_front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="@string/card_front"
                android:inputType="text"
                android:textColor="@color/light_black"
                android:textColorHint="@color/light_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:labelFor="@id/edit_card_back"
                android:text="@string/card_back"
                android:textColor="@color/light_black" />

            <EditText
                android:id="@+id/edit_card_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="@string/card_back"
                android:inputType="text"
                android:textColor="@color/light_black"
                android:textColorHint="@color/light_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:labelFor="@id/edit_card_notes"
                android:text="@string/card_notes"
                android:textColor="@color/light_black" />

            <EditText
                android:id="@+id/edit_card_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/card_notes"
                android:inputType="textMultiLine"
                android:textColor="@color/light_black"
                android:textColorHint="@color/light_black" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
