<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/rec_collections_preview_layout"
        android:background="@drawable/rec_view_collection_or_pack_background"
        android:padding="12dp">

        <com.vanniktech.emoji.EmojiTextView
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="@dimen/rec_view_font_size_default"
            android:id="@+id/rec_collections_preview_text"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rec_view_font_size_above_default"
                android:layout_marginTop="2dp"
                android:id="@+id/rec_collections_parent"
                android:visibility="gone"
                android:textColor="@color/light_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rec_view_font_size_default"
                android:id="@+id/rec_collections_name"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/rec_view_font_size_below_default"
                android:layout_marginTop="2dp"
                android:id="@+id/rec_collections_desc"
                android:textColor="@color/dark_grey" />
        </LinearLayout>

        <TextView
            android:gravity="center_vertical|end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/rec_view_font_size_default"
            android:id="@+id/rec_collections_number_text"
            android:textColor="@android:color/black"
            android:layout_gravity="end"
            android:padding="8dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
